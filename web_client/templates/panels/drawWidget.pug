extends ./panel.pug

block title
  | #[span.icon-pencil] #{title}

block content
  .btn-group.btn-justified.btn-group-sm
    .btn-group.btn-group-sm
      button.h-draw-point.btn.btn-default(type='button')
        | #[span.icon-circle-empty] Point
    .btn-group.btn-group-sm
      button.h-draw-rectangle.btn.btn-default(type='button')
        | #[span.icon-check-empty] Rectangle
    .btn-group.btn-group-sm
      button.h-draw-polygon.btn.btn-default(type='button')
        | #[span.icon-star-empty] Polygon

  - var elements = [{id: 'a', type: 'point'}, {id: 'b', type: 'rectangle'}];
  if elements.length
    .h-elements-container
      each element in elements
        .h-element
          span(data-id=element.id)
            span.icon-cog.h-edit-element
            span.icon-cancel.h-delete-element
            span.h-element-label #{element.type}

    button.btn.btn-primary.h-save-annotation(type='button') Save

